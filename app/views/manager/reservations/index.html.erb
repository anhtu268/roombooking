<%= provide :title, t(".reservations") %>
<%= provide :js, "manager/reservations" %>
<div class="row">
  <div class="col-lg-12 grid-mar">
    <div class="card">
      <div class="card-body">
        <%= content_tag :div, "", id: "reservations_chart", data: {reservations: @reservations} %>
      </div>
    </div>
  </div>

  <div class="col-md-12 mt-4">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"><%= t ".reservations" %></h4>

        <table class="table">
          <thead>
            <tr>
              <th><%= t ".id" %></th>
              <th><%= t ".user" %></th>
              <th><%= t ".total_bill" %></th>
              <th><%= t ".status" %></th>
              <th><%= t ".create_at" %></th>
              <th><%= t ".update_at" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @reservations %>
          </tbody>
        </table>
        <%= paginate @reservations %>
      </div>
    </div>
  </div>
</div>
