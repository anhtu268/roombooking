<section class="button-area">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-12 mt-10">
        <%= search_form_for @search, url: locations_path(params.permit(q: {})), class: "d-flex" do |f| %>
          <%= f.search_field :national_or_address_cont, placeholder: t(".location"),
            class: "single-input-primary m-1" %>
          <%= search_field_tag "q[have_rooms_fit_with][range]", nil, class: "single-input-primary m-1 daterange", required: true %>
          <%= number_field_tag "q[have_rooms_fit_with][peoples]", nil, class: "single-input-primary m-1", placeholder: t(".no_peoples"),
            in: 1..30, required: true %>
          <%= number_field_tag "q[have_rooms_fit_with][rooms]", nil, class: "single-input-primary m-1", placeholder: t(".no_rooms"),
            in: 1..30, required: true %>
          <% if params[:q] %>
            <% params[:q].each do |key,value| %>
              <% if key != "have_rooms_fit_with" && key != "national_or_address_cont" %>
                <%= hidden_field_tag key, value %>
              <% end %>
            <% end %>
          <% end %>
          <%= f.submit "search", class: "genric-btn primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
