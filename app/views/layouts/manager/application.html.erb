<!DOCTYPE html>
<html>
  <head>
    <%= render "layouts/manager/meta" %>
    <title><%= full_title yield(:title) %></title>
    <%= render "layouts/manager/js" %>
    <%= render "layouts/manager/style" %>
  </head>

  <body>
    <div class="container-scroller">
      <%= render "layouts/manager/nav" %>
      <div class="container-fluid page-body-wrapper">
        <%= render "layouts/manager/sidebar" %>
        <div class="main-panel">
          <div class="content-wrapper">
            <%= yield %>
          </div>
          <%= render "layouts/manager/footer" %>
        </div>
      </div>
    </div>
    <%= render "layouts/manager/alert" %>
  </body>
</html>
